
<div style="margin-left: 1%; margin-right: 1%;  flex:60%;">
    <% if(locals.user){ %> 
    <form action="/user/createPost" method="POST">
        <textarea name="post" class="form-control" required></textarea>
        <input type="submit" value="post" class="btn">
    </form>



 
<div id="post-List">
    <center>Post by Users</center>
    <ul class="list-group">     
        <% for(x of postList){ %>
        <li class="list-group-item " >  
            <% if(x.user.id == user.id){ %> 
          <a href="/post/destroy/<%=x.id%> "><img src="https://img.icons8.com/flat-round/25/000000/delete-sign.png"/></a>
          <% } %> 
            <%= x.content %>  
            <br><small> ..... <%= x.user.name %>  </small> <br>  

             <%- include("commentList") %>              
                              
    
            <br>
        </li>
        <% } %>   
    </ul>
</div>

<% } %> 
</div>